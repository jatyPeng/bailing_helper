{
    "name": "bailing/helper",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "常见帮助类",
    "autoload": {
        "psr-4": {
            "Bailing\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^5.4",
        "hyperf/config-center": "^2.2",
        "hyperf/config-nacos": "^2.2",
        "hyperf/db-connection": "^2.2",
        "hyperf/di": "^2.2",
        "hyperf/filesystem": "^2.2",
        "hyperf/framework": "~2.2.0",
        "hyperf/guzzle": "^2.2",
        "hyperf/http-server": "~2.2.0",
        "hyperf/json-rpc": "^2.2",
        "hyperf/logger": "~2.2.0",
        "hyperf/redis": "~2.2.0",
        "hyperf/rpc-client": "^2.2",
        "hyperf/validation": "^2.2",
        "league/flysystem": "^2.3",
        "league/flysystem-aws-s3-v3": "^2.0",
        "overtrue/flysystem-cos": "^4.0",
        "tencentcloud/captcha": "^3.0",
        "viest/php-ext-xlswriter-ide-helper": "^1.3.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~3.5.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Bailing\\ConfigProvider"
        }
    }
}
